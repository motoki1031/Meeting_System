<div class="row justify-content-center">
  <div class="col-lg-auto col-md-auto ml-auto mr-auto">
    <div class="card card-register bg-info rounded mx-auto">
      <div class="text-center">
	<h2>Sign up</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row">
        <%= devise_error_messages! %>
      </div>

      <div class="card-body">
	<div class="form-group">
	  <%= f.label :username %><br />
	  <%= f.text_field :username, autofocus: true, class:"form-control form-control-lg rounded" %>
	</div>

	<div class="form-group">
	  <%= f.label :name %><br />
	  <%= f.text_field :name, class:"form-control form-control-lg rounded" %>
	</div>

	<div class="form-group">
	  <%= f.label :grade %><br />
	  <%= f.select :grade,[["B1", "B1"], ["B2", "B2"],["B3", "B3"], ["B4", "B4"],["M1", "M1"], ["M2", "M2"]] %>
	</div>


	<div class="form-group">
	  <%= f.label :password %>
	  <% if @minimum_password_length %>
	  <em>(<%= @minimum_password_length %> characters minimum)</em>
	  <% end %><br />
	  <%= f.password_field :password, autocomplete: "off", class:"form-control form-control-lg rounded" %>
	</div>

	<div class="form-group">
	  <%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control form-control-lg rounded" %>
	</div>

	<div class="row justify-content-center">
	  <%= f.submit "Sign up", class:"btn btn-neutral btn-lg" %>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
