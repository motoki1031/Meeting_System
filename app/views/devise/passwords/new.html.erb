<div clas="row justify-content-center">
  <div class="col-lg-auto col-md-auto ml-auto mr-auto">
    <div class="card card-register bg-info rounded mx-auto">
      <div class="text-center">
	<h2>Forgot your password?</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="card-body">
	<div clas="row">
	  <%= devise_error_messages! %>
	</div>

	<div class="form-group">
	  <%= f.label :email %>
	  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg rounded" %>
	</div>

	<div class="row justify-content-center">
	  <%= f.submit "Send me reset password instructions", class:"btn btn-neutral" %>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
