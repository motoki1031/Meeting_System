<div class = 'body'>
<div class = 'title'>
<h1>会議情報</h1>
</div>
<table>
  <thead>
    <tr>
      <th>会議名</th>
      <th>回数</th>
      <th>会議属性</th>
      <th>場所</th>
      <th>備考</th>
      <th>開始</th>
      <th>修了</th>
      <th>Remaks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.title %></td>
        <td><%= meeting.times %></td>
        <td><%= meeting.category %></td>
        <td><%= meeting.room %></td>
        <td><%= meeting.remarks %></td>
        <td><%= meeting.started_at %></td>
        <td><%= meeting.closed_at %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

